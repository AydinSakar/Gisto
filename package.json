{
  "name": "gisto",
  "version": "1.9.31",
  "description": "Gisto is a Cross-platform snippets management desktop application that allows you and/or your team share code snippets fast and easily. Based on GitHub Gists Infrastructure which means you can use all your existing snippets by connecting your GitHub account! Gisto started as an attempt to fulfill the lack of a syntax highlighted and cloud synchronized code snippet solution. You may think of Gisto as Evernote for code.",
  "productName": "Gisto",
  "main": "main.js",
  "scripts": {
    "clean": "rimraf dist release",
    "start:dev": "NODE_ENV='development' webpack --mode development --watch",
    "start:prod": "NODE_ENV='production' webpack --mode production",
    "electron": "electron ./dist",
    "dev": "concurrently \"npm run start:dev\" \"npm run electron\"",
    "prod": "concurrently \"npm run start:prod\" \"npm run electron\"",
    "version:patch": "npm --no-git-tag-version version patch",
    "pack:mac": "cross-env NODE_ENV=production npm run clean && npm run start:prod && npx electron-builder build --m --publish=always",
    "pack:win": "cross-env npm run clean && npm run start:prod && npx electron-builder build -w --x64 --ia32 --publish=always",
    "pack:linux": "cross-env NODE_ENV=production npm run clean && npm run start:prod && npx electron-builder build --l --x64 --publish=always",
    "pack:all": "cross-env NODE_ENV=production npm run clean && npm run start:prod && npx electron-builder build -mwl --x64 --publish=always",
    "pack:build": "cross-env npm run clean && npm run start:prod && npx electron-builder build --publish=always"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gisto/gisto.git"
  },
  "bugs": {
    "url": "https://github.com/gisto/gisto/issues"
  },
  "homepage": "http://www.gistoapp.com/",
  "keywords": [
    "gisto",
    "gist",
    "code",
    "snippets"
  ],
  "authors": [
    {
      "name": "Maayan Glikser",
      "url": "http://www.glikm.com"
    },
    {
      "name": "Sasha Khamkov",
      "url": "http://www.sanusart.com"
    }
  ],
  "license": "MIT",
  "readmeFilename": "README.md",
  "devDependencies": {
    "ace-builds": "^1.3.3",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "concurrently": "^3.5.1",
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "^0.28.11",
    "devtron": "^1.4.0",
    "electron": "^2.0.2",
    "electron-builder": "^20.15.1",
    "electron-publisher-s3": "^20.15.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-import-resolver-webpack": "^0.10.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.8.2",
    "file-loader": "^1.1.11",
    "google-fonts-webpack-plugin": "^0.4.4",
    "html-webpack-plugin": "^3.2.0",
    "mimic": "^2.0.6",
    "prop-types": "^15.6.1",
    "react-hot-loader": "^4.2.0",
    "rimraf": "^2.6.2",
    "style-loader": "^0.21.0",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.8.3",
    "webpack-cli": "^2.1.3",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-dev-server": "^3.1.4"
  },
  "dependencies": {
    "babel-plugin-emotion": "^9.1.2",
    "color": "^3.0.0",
    "electron-devtools-installer": "^2.2.4",
    "electron-reload": "^1.2.2",
    "emotion": "^9.1.3",
    "lodash": "^4.17.10",
    "monaco-editor-webpack-plugin": "^1.2.1",
    "normalize.css": "^8.0.0",
    "react": "^16.3.2",
    "react-ace": "^6.1.1",
    "react-dom": "^16.3.2",
    "react-emotion": "^9.1.3",
    "react-monaco-editor": "^0.17.2",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^5.0.0-alpha.9",
    "redux": "^4.0.0",
    "reselect": "^3.0.1",
    "styled-components": "^3.2.6",
    "superagent": "^3.8.3",
    "webpack-merge": "^4.1.2"
  },
  "build": {
    "directories": {
      "app": "dist",
      "buildResources": "build",
      "output": "release"
    },
    "appId": "com.gistoapp.gisto2",
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "mac": {
      "publish": {
        "provider": "s3",
        "bucket": "gisto-releases"
      },
      "category": "public.app-category.productivity",
      "icon": "build/icon.png"
    },
    "dmg": {
      "publish": {
        "provider": "s3",
        "bucket": "gisto-releases"
      },
      "window": {
        "width": 540,
        "height": 328
      },
      "contents": [
        {
          "x": 100,
          "y": 200
        },
        {
          "x": 440,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "publish": {
        "provider": "s3",
        "bucket": "gisto-releases"
      },
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "linux": {
      "maintainer": "Sasha Khamkov <sanusart@gmail.com>",
      "publish": {
        "provider": "s3",
        "bucket": "gisto-releases"
      },
      "target": [
        "deb",
        "rpm",
        "pacman",
        "AppImage",
        "snap"
      ],
      "synopsis": "Gisto - snippets made awesome",
      "category": "Development"
    }
  }
}
